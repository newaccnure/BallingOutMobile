<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BallingOutMobile"
            x:Class="BallingOutMobile.MainMenuPage"
                  Title="MasterApp">
    <MasterDetailPage.Master>
        <ContentPage Title="Master">
            <StackLayout HorizontalOptions="FillAndExpand"  BackgroundColor="#87b5ff" Padding="5,15,5,5">
                <Button FontSize="Medium" HorizontalOptions="StartAndExpand" BackgroundColor="#87b5ff" Text="Profile" Clicked="ProfileButton_Clicked"/>
                <Button FontSize="Medium" HorizontalOptions="StartAndExpand" BackgroundColor="#87b5ff" Text="Practice" Clicked="PracticeButton_Clicked"/>
                <Button FontSize="Medium" HorizontalOptions="StartAndExpand" BackgroundColor="#87b5ff" Text="Settings" Clicked="SettingsButton_Clicked"/>
                <Button FontSize="Medium" HorizontalOptions="StartAndExpand" BackgroundColor="#87b5ff" Text="Log out" Clicked="LogOutButton_Clicked"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>