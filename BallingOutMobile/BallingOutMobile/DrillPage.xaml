<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BallingOutMobile.DrillPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="{Binding Drill.Name}" FontSize="18" />
            <Label Text="Description"/>
            <Label Text="{Binding Drill.Description}" FontSize="18" />
            <Label Text="Seconds for exercise:" />
            <Label Text="{Binding Drill.SecondsForExercise}" />
            
            <Button x:Name="StartDrillButton" Text="Start" Clicked="StartDrill_Clicked"/>
            <Label x:Name="TimeTextLabel" Text="Milliseconds left:" IsVisible="False"/>
            <Label x:Name="TimeLabel" Text="{Binding CurrentTime}" IsVisible="False"/>
            <Button x:Name="ViewResultButton" Text="View result" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>