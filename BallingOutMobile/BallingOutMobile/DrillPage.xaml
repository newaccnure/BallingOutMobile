<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BallingOutMobile.DrillPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Triggers>
                <DataTrigger 
                    TargetType="StackLayout"
                    Binding="{Binding Drill.IsCompleted}" 
                    Value="True">
                    <Setter Property="BackgroundColor"  Value="LightGreen"/>
                </DataTrigger>
            </StackLayout.Triggers>
            <Label Text="Name"/>
            <Label Text="{Binding Drill.Name}" FontSize="18" />
            <Label Text="Name"/>
            <Label Text="{Binding Drill.VideoReference}" FontSize="18" />
            <Label Text="Name"/>
            <Label Text="{Binding Drill.Description}" FontSize="18" />
            <Label Text="Name"/>
            <Label Text="{Binding Drill.DifficultyId}" FontSize="18" />
            <Label Text="Seconds for exercise:" />
            <Label Text="{Binding Drill.SecondsForExercise}" />
            <Button Text="Start" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>